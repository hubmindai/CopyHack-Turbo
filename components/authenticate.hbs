<div class="row">
  <div class="col-md-5 offset-md-3">
    <br><br>
    <br>
    <div class="card">
      <div class="card-body">
        <div class="text-center mb-2 mt-3">
          <a href="/"><img src="/assets/images/logo-color.svg" type="image/svg+xml" height="48"></a>
        </div>

        {{#if error}}
          <p>
            <div class="alert alert-danger text-center">
              Authentication failed. Please try again.
            </div>
          </p>
        {{/if}}

        {{#is state "signup"}}
          <div class="text-center">
            <h2>Sign Up</h2>
          </div>
          <div class="text-center">Enter your email to get started.</div>
          <form method="post" action="requestcode">
            <div class="mb-3">
              <label for="input-email"><strong>Email</strong></label>
              <input id="input-email" type="text" class="form-control" name="email" placeholder="you@example.com" value="{{../email}}">
            </div>
            <p class="text-center">
              <button type="submit" class="btn btn-lg btn-primary btn-block">Sign Up With Email</button>
            </p>
          </form>
        {{/is}}

        {{#is state "signin"}}
          <div class="text-center">
            <h2>Sign In</h2>
          </div>
          <form method="post" action="requestcode">
            <div class="mb-3">
              <label for="input-email"><strong>Email</strong></label>
              <input id="input-email" type="text" class="form-control" name="email" placeholder="you@example.com" value="{{../email}}">
            </div>
            <p class="text-center">
              <button type="submit" class="btn btn-lg btn-primary btn-block">Sign In With Email</button>
            </p>
          </form>
        {{/is}}

        {{#is state "entercode"}}
          <div class="text-center mb-3">
            <h2>Check your email</h2>
            We sent an authentication code to your email.
            <br>
            Enter the code below to signin.
          </div>
          <form method="post" action="verifycode">
            <div class="mb-3 col-6 offset-3">
              <input type="text" class="form-control text-center" name="verification_code">
              <input type="text" class="d-none" name="session_token" value="{{../session_token}}" required>
            </div>
            <p class="text-center">
              <button type="submit" class="btn btn-lg btn-primary btn-block">Verify Code</button>
            </p>
          </form>
          <p class="text-center">
            <a class="text-secondary" href="/auth/signin"><small>Having trouble? Click here to try again.</small></a>
          </p>
        {{/is}}

      </div>
    </div>
  </div>
</div>
