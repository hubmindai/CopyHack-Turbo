<!-- Main -->
<!-- ############################################ -->
{{>_navigation
    type="admin"
    section="accounts"
    breadcrumbs='[ { "Home":"/admin/dashboard" }, { "Accounts":"" } ]'
}}
<div class="card">
  <div class="card-body">
    <div class="card-title">
      <span class="section-title">Accounts</span>
    </div>
  </div>
  {{#>_list data=accounts state=list_state}}
    <a href="accounts/{{account_id}}/edit" class="list-group-item list-group-item-action d-flex">
      <div class="text-secondary m-2 p-1 pe-2 ms-0">
        <i class="fas fa-users fa-lg"></i>
      </div>
      <div class="overflow-hidden text-truncate">
        <strong class="text-dark">{{name}}</strong>
        <br>
        <small class="text-secondary">{{#if strip_subscription_id}}{{strip_subscription_id}}{{else}}Payment Account Not Setup{{/if}}</small>
      </div>
    </a>
  {{/_list}}
</div>
