<!-- Main -->
<!-- ############################################ -->
{{>_navigation
    type="user"
    section="things"
    breadcrumbs='[ { "Home":"/user/dashboard" }, { "Things":"" } ]'
}}
<div class="card">
  <div class="card-body">
    <div class="card-title">
      <span class="section-title">Things</span>
      <div class="float-end">
        <a class="btn btn-primary" href="things/new">
          <i class="fas fa-plus fa-fw"></i> New Thing
        </a>
      </div>
    </div>
  </div>
  {{#>_list data=things state=list_state}}
    <a href="things/{{thing_id}}/edit" class="list-group-item list-group-item-action d-flex">
      <div class="float-start text-secondary m-2 p-1 pe-2 ms-0">
        <i class="fas fa-cube fa-lg"></i>
      </div>
      <div class="overflow-hidden text-truncate">
        <strong class="text-dark">{{name}}</strong>
        <br>
        <small class="text-secondary">{{description}}</small>
      </div>
    </a>
  {{/_list}}
</div>
