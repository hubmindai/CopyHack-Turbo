<!-- Main -->
<!-- ############################################ -->
{{>_navigation
    type="admin"
    section="users"
    breadcrumbs='[ { "Home":"/admin/dashboard" }, { "Users":"" } ]'
}}
<div class="card">
  <div class="card-body">
    <div class="card-title">
      <span class="section-title">Users</span>
    </div>
  </div>
  {{#>_list data=users state=list_state}}
    <a href="users/{{user_id}}/edit" class="list-group-item list-group-item-action d-flex">
      <div class="text-secondary m-2 p-1 pe-2 ms-0">
        <i class="fas fa-user fa-lg"></i>
      </div>
      <div class="overflow-hidden text-truncate">
        <strong class="text-dark">{{name}}</strong>
        <br>
        <small class="text-secondary">{{email}}</small>
      </div>
    </a>
  {{/_list}}
</div>
