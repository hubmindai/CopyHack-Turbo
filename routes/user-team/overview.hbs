<!-- Main -->
<!-- ############################################ -->
{{>_navigation
    type="user"
    section="team"
    breadcrumbs='[ { "Home":"/user/dashboard" }, { "Team":"" } ]'
}}
<div class="card">
  <div class="card-body">
    <span class="section-title">Team</span>
    <div class="float-end">
      <a class="btn btn-primary" href="team/new">
        <i class="fas fa-plus fa-fw"></i> Invite User
      </a>
    </div>
  </div>
  {{#>_list data=users state=list_state}}
    <a href="team/{{user_id}}/edit" class="list-group-item list-group-item-action d-flex">
      <div class="text-secondary m-2 p-1 pe-2 ms-0">
        <i class="fas fa-user fa-lg"></i>
      </div>
      <div class="overflow-hidden text-truncate">
        <strong class="text-dark">{{name}}</strong>
        <br>
        <small class="text-secondary">{{email}}</small>
      </div>
      <div class="ms-auto pt-1 mt-2">
        {{#is account_role "MEMBER"}}Member{{/is}}
        {{#is account_role "OWNER"}}Owner{{/is}}
      </div>
    </a>
  {{/_list}}
</div>
